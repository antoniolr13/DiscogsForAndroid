<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    <TextView
            android:id="@+id/emptyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No releases"
            android:textStyle="bold" android:textSize="15sp"
            android:layout_centerInParent="true" android:visibility="gone"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pull_refresh_list" android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:fastScrollEnabled="false" android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" android:smoothScrollbar="true"/>
</RelativeLayout>
